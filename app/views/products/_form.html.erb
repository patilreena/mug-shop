<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <section class="fdb-block">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-8 col-xl-6">
          <div class="row">
            <div class="col text-center">
              <% if product.id? %>
                <h1>Edit Product</h1>
              <% end %>

              <% unless product.id? %>
                <h1>New Product</h1>
              <% end %>
            </div>
          </div>
          <div class="row align-items-center">
            <div class="col mt-4">
              <label>Product Name</label>
              <%= form.text_field :name, id: :product_name, :class => "form-control", :placeholder => "Product Name" %>
            </div>
          </div>
          <div class="row align-items-center mt-4">
            <div class="col mt-4">
              <label>Description</label>
               <%= form.text_area :description, id: :product_description, :class => "form-control", :placeholder => "Description"%> 
            </div>
          </div>
        
          <div class="row align-items-center mt-4">
            <div class="col mt-4">
              <label>Price</label>
               <%= form.text_field :price, id: :product_price, :class => "form-control", :placeholder => "Price"%>
            </div>
          </div>
          <div class="row align-items-center mt-4">
            <div class="col mt-4">
              <label>Image</label>
                <%= form.file_field :image, id: :product_image%> 
            </div>
          </div>

          <div class="row mt-4">
            <div class="col">
              <button class="btn">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
